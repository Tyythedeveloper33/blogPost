    <h2>This is where you can comment on posts!!</h2>


    {{#each blogPost}}
    <div class="forms-container">
        <div class="blogpost-form">
            <form>
            {{!-- <form action="/api/dashboard/comment" method="post"> --}}
                <input type="hidden"  name="id" value="{{id}}">
                <label for="title">Title: {{title}}</label><br><hr>
                <label for="content">{{content}}</label>
                <h3>Created on {{date_created}} by {{user.name}}</h3>
                <hr>
                <input type="text" id="comment-input" name="content" required><br><br>
                <button type="button" data-postid="{{id}}" id="Comment">Comment</button>
            </form>
        </div>
    </div>
    {{/each}}


    <!-- Uncomment the following code if needed -->
     <div class="comments-container">
      {{#unless blogPost.comments}}
    <h2>Be the first to Comment!</h2>
{{else}}
    {{#each blogPost.comments as |comment|}}
        <h2>{{comment.postid}}</h2>
        <h2>{{comment.content}}</h2>
    {{/each}}
{{/unless}}
   


   <script src="./js/blog.js"></script>



