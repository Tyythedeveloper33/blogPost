    
    {{> nav}}
        <div class="View-Dashboard">

            <h1>Welcome to Blogstarzz {{name}}!</h1>
        </div>
        <div class="blogPost">
            <h2 class="blog-post-title">{{ title }}</h2>
            <p class="blog-post-meta">
                Created by {{ author }}
            </p>
            <div class="blog-post-content">
               <h1> {{ content }}</h1>
               <button  id="makeComment">comment</button>
            </div>
        </div>
        <br>
        <h2 class="h2-blog"> Make a post!!</h2>
     <div class="forms-container">
        <form class="blogpost-form">
            <link rel="stylesheet" href="css/{{style}}">
            
                <label for="title">title:   </label>
                <input type="title" id="title" name="title" required>
                  <br><hr>
                <label for="content">Content:</label>
                <input type="content" id="content" name="content" required><br>
                <hr>
                <button type="btn" id="post">make post</button>
                
               
            </form>
        </div>

        <script src="/js/logout.js"></script>
   