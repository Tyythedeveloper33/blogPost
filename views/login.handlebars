<body>
     <div class="forms-container">
        <div class="login-form">
            <h2>Login</h2>
            <form>
                <label for="login-name">Username:   </label>
                <input type="username" id="login-name" name="login-name" required><br>
                <label for="login-password">Password:</label>
                <input type="password" id="login-password" name="login-password" required><br>
                <button type="submit">Login</button>
            </form>
        </div>
        <div class="signup-form">
            <h2>Sign Up</h2>
            <form>
                 <label for="signup-name">Username:   </label>
                <input type="name" id="signup-name" name="signup-name" required>
                <br>
                <label for="signup-password">Password:</label>
                <input type="password" id="signup-password" name="signup-password" required><br>
                <button type="submit" id="Su-Submit">Sign Up</button>
            </form>
        </div>
    </div>
</body>
